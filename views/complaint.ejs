<%-include ('partials/stheader')%>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Complaint Place</title>
    <link rel="stylesheet" href="css/stylesheet.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
   <h3 id="h3">Complaint will be sent anonymously</h3>
</head>
<body>
  <div class="container2" style="width: auto; position: absolute; top: 0mm; right: 0;">
    <table class="table" style="background-color: white">
      <tr>
        <td>  <%if(im==null){%>
          <i class="fas fa-user"></i>
          <%}else{%>
        <img style="height: 30px; border-radius: 10px 10px 10px 10px;" src=<%=  im %> alt="" class="image"> <%}%>
         <%= loginName%>  </td>    
      </tr> 
    </table>
  </div><hr>
  <% if(message.length>0){%>
    <div class="card alert alert-success" style="width: 100%;">
        <div class="card-body">
          <p class="card-text" style="text-align: center; font-family: Georgia, 'Times New Roman', Times, serif;"><%= message%></p>
        </div> 
      </div> 
  <%}%>

<form action="/complaint-post" method="POST" style="width: 50%; margin-left: 10%; margin-top: 3%; font-family: Georgia, 'Times New Roman', Times, serif; font-weight: bold;">  
    <div class="form-group">
      <!--enroll id will be fixed after session work-->
        <label for="subject">Subject</label>
        <textarea class="form-control" name="subject" rows="1" required></textarea>
        
      </div>
    <div class="form-group">
      <label for="msg">Message</label>
      <textarea class="form-control" name="msg" rows="3" required></textarea>
    </div>
    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit" style="font-weight: bold; width: 100%;">
        Submit
    </button>
  </form><br>
    <h3 id="h3">Earlier Complaints</h3>
    <div class="container" style="margin-top: 2%;">
    <% if(compData.length>0){%>
      <% compData.forEach(function(msg){%>
        <button class="btn btn-dark" type="button" style="width: 100%; height: 50px;  background-image: linear-gradient( to right,  #ffffff 2%, #181616f1 98%)" data-toggle="collapse" data-target="#collapse<%= msg.sub%>" aria-expanded="false" aria-controls="collapse<%= msg.sub%>">
          <%= msg.sub%>
        </button>
        <div class="collapse" id="collapse<%= msg.sub%>">
          <div class="card card-body">
            <i class="fas fa-calendar-alt"></i><%= msg.date%><br>
          <%= msg.message%>
          </div>
        </div> <hr>      
        <%})} else {%>
          <div class="card" style="width: 100%;">
            <div class="card-body">
              <p class="card-text" style="text-align: center;">No Complaint Filed Yet</p>
            </div> 
          </div> 
          <%}%>
     </div>
     <br><br><br>
</body>
<%-include ('partials/footer')%>