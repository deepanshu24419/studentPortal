 
  <!DOCTYPE html>
  <html>
  <head>
	  <title>Login Form</title>
	  <link rel="stylesheet" type="text/css" href="css/style.css">
	  <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	  <script src="https://kit.fontawesome.com/a81368914c.js"></script>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
	<% if(message.length>0){%>
		<div class="card alert alert-success" style="height: 5%; width: 100%;">
			<div class="card-body">
			  <p class="card-text" style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><%= message%></p>
			</div> 
		  </div> 
	  <%}%>
	  <img class="wave" src='Images/wave.png'>
	  <div class="container">
		  <div class="img">
		<img src='Images/forget.svg'>
		  </div>
		  <div class="login-content">
			  <form action="/forPass" method="post">
				  <!-- <img src='Images/st.svg'> -->
				  <h3 class="title">Change Password</h3><br>
					 <div class="input-div one">
						<div class="i">
                            <i class="fas fa-envelope"></i>
                    </div>
						<div class="div">
								<h5>Email Id</h5>
								<input type="text" class="input" name="email" required>
						</div>
					 </div>				  
				  <input type="submit" class="btn" value="Verify">
			  </form>
		  </div>
	  </div>
	  <script type="text/javascript" src="js/main.js"></script>
  </body>
  </html>